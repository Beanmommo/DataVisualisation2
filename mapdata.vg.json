{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Toyota Manufacturing Plant Locations" },
  "width": 900,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "ne_110m_admin_0_countries.json",
        "format": {
          "type": "topojson", 
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      },
      "projection": {
        "type": "equalEarth"
      }
    },
    {
      "data": {
        "url": "toyota_manufacturing_plant_count.csv"
      },
      "projection": {
        "type":"equalEarth"
      },
      "mark":"circle",
      "encoding": {
        "longitude": {
          "field":"long",
          "type": "quantitative"
        },
        "latitude": {
          "field": "lat",
          "type": "quantitative"
        },
        "size": {
          "field": "plants_count", 
          "type": "quantitative"
        },
        "color": {
          "value": "red"
        }
      }
    }
  ]

  
  
}