{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "top10auto_company_marketcap.csv"
    },
    "width": "container",
    "params": [
        {
            "name": "year_selection",
            "value": 2010,
            "bind": {
              "input": "range",
              "min": 2010,
              "max": 2022,
              "step": 1,
              "name": "Select Year: "
            }
          }
    ],

    "transform": [
        {"filter": "year_selection == null || datum.Year == year_selection"}
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Value", 
                    "type": "quantitative",
                    "axis": {
                        "grid": false
                    },
                    "scale": {
                        "domain": [0, 300]
                    }
                },
                "y": {
                    "field": "Name", 
                    "type": "nominal",
                    "sort": "-x",
                    "scale": {
                        "padding": 0.6
                    }
                },
                "color": {
                    "field": "Name",
                    "type": "nominal",
                    "scale": {
                        "domain": ["Toyota", "BMW","BYD","Ferrari","Honda","Mercedes", "Porsche", "Stellantis", "Tesla", "Volkswagen"],
            "range": ["#d71920", "#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb"]
                    },
                    "legend": null
                }
            }
        }
    ],
    
    "config": {
        "padding": {
            "bottom": 10,
            "top": 10
        }
    }
  }