{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Google's stock price over time.",
    "width": "container",
    "data": {
        "url": "top10auto_company_marketcap.csv"
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "clip": true
        },
        "encoding": {
          "x": {
            "field": "Year", 
            "type": "temporal", 
            "axis": {
              "grid": false
              }
            },
          "y": {
            "field": "Value", 
            "type": "quantitative",
            "scale": {
                "domain": [0, 300]
            },
            "axis": {
                "grid": false
            }
          },
          "color": {
            "field": "Name", "type": "nominal", "legend": null,
            "scale": {
                "domain": ["Toyota", "BMW","BYD","Ferrari","Honda","Mercedes", "Porsche", "Stellantis", "Tesla", "Volkswagen"],
                "range": ["#d71920", "#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb"]
            }
          }
        }
    },
    {
      "mark": {
        "type": "point",
        "clip": true
      },
      "encoding": {
        "x": {
          "field": "Year", 
          "type": "temporal", 
          "axis": {
            "grid": false
            }
          },
        "y": {
          "field": "Value", 
          "type": "quantitative",
          "scale": {
              "domain": [0, 300]
          },
          "axis": {
              "grid": false
          }
        },
        "color": {
          "field": "Name", "type": "nominal", "legend": null,
          "scale": {
              "domain": ["Toyota", "BMW","BYD","Ferrari","Honda","Mercedes", "Porsche", "Stellantis", "Tesla", "Volkswagen"],
              "range": ["#d71920", "#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb"]
          }
        },
        "size": {
          "value": 2
        },
        "tooltip": [
          {
            "field":"Name", "type": "nominal", "title": "Company Name"
          },
          {
            "field":"Value", "type": "quantitative", "title": "Market Cap (B)"
          }
        ]
      }
  },
    {
      "data": {
        "values": [
          {"x": "2008"}
        ]
      },
      "mark": {
        "type": "rule",
        "strokeDash": [5, 8]
      },
      "encoding": {
        "x": {
           "field": "x",
           "type": "temporal"
        }
      }
    },
    {
      "data": {
        "values": [
          {"x": "2008", "y": 200, "text": "2008 Global Recesion"},
          {"x": "2013", "y": 135, "text": "Mercedes"},
          {"x": "2019", "y": 280, "text": "Tesla"}
        ]
      },
      "mark": "text",
      "encoding": {
        "x": {
          "field": "x",
          "type": "temporal"
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        },
        "text": {
          "field": "text", "type": "nominal"
        }
      }
    }
  ]
    
}