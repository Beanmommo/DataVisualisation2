{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Google's stock price over time.",
    "data": {
        "url": "top10auto_company_marketcap.csv"
    },
    "width": "container",
    "layer": [
      {
        "mark": "line",
    "encoding": {
      "x": {
        "field": "Year", 
        "type": "temporal", 
        "axis": {
          "grid": false
        }
      },
      "y": {
        "field": "Value", 
        "type": "quantitative",
        "scale": {
            "domain": [0, 300]
        },
        "axis": {
            "grid": false
        }},
        "color": {
          "field": "Name", "type": "nominal", "legend": null,
          "scale": {
              "domain": ["Toyota", "BMW","BYD","Ferrari","Honda","Mercedes", "Porsche", "Stellantis", "Tesla", "Volkswagen"],
              "range": ["#d71920", "#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb","#bbbbbb"]
          }
        }
      }
    },
    {
      "data": {
        "values": [
          {"x": "2008"}
        ]
      },
      "mark": {
        "type": "rule",
        "strokeDash": [5, 8]
      },
      "encoding": {
        "x": {
           "field": "x",
           "type": "temporal"
        }
      }
    },
    {
      "data": {
        "values": [
          {"x": "2008", "y": 200, "text": "2008 Global Recesion"}
        ]
      },
      "mark": "text",
      "encoding": {
        "x": {
          "field": "x",
          "type": "temporal"
        },
        "y": {
          "field": "y",
          "type": "quantitative"
        },
        "text": {
          "field": "text", "type": "nominal"
        }
      }
    }
  ]
    
}