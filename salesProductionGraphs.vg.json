{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "toyota_prod_sales_long.csv"},
    "params": [
        {
            "name": "year_selection",
            "value": 2010,
            "bind": {
              "input": "range",
              "min": 2010,
              "max": 2022,
              "step": 1,
              "name": "Select Year: "
            }
          }
    ],
    "transform": [
        {"filter": "year_selection == null || datum.Year == year_selection"}
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Type",
            "type": "ordinal",
            "axis": null
        },
        "y": {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "axis": {
                "grid": false
            }
        },
        "color": {
            "field": "Type",
            "scale": {
                "domain": ["Production", "Sales"],
                "range": ["#429ec9", "#d71920"]
            }
        },
        "column":{
            "field": "Continent",
            "type": "nominal",
            "header": {
                "labelOrient": "bottom"
            }
        }
    }

}   