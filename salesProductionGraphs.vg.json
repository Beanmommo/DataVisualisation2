{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "toyota_prod_sales_long.csv"},
    "params": [
        {
            "name": "year_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019",
                    "2020",
                    "2021",
                    "2022"
                ],
                "name": "Year Select: "
            }
        }
    ],
    "transform": [
        {"filter": "year_selection == null || datum.Year == year_selection"}
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Type",
            "type": "ordinal",
            "axis": null
        },
        "y": {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "axis": {
                "grid": false
            }
        },
        "color": {
            "field": "Type",
            "scale": {
                "domain": ["Production", "Sales"],
                "range": ["#429ec9", "#d71920"]
            }
        },
        "column":{
            "field": "Continent",
            "type": "nominal",
            "header": {
                "labelOrient": "bottom"
            }
        }
    }

}   